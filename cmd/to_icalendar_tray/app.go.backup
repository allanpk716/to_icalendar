// sendLog å‘é€æ—¥å¿—åˆ°å‰ç«¯
func (a *App) sendLog(logType, message string) {
	if a.ctx != nil {
		wailsRuntime.EventsEmit(a.ctx, "initLog", LogMessage{
			Type:    logType,
			Message: message,
			Time:    time.Now().Format("15:04:05"),
		})
