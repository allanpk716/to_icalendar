// NewTaskManager åˆ›å»ºæ–°çš„ä»»åŠ¡ç®¡ç†å™¨
func NewTaskManager() *TaskManager {
	return &TaskManager{
		tasks: make(map[string]*TaskInfo),
	}
}

// generateTaskID ç”Ÿæˆå”¯ä¸€çš„ä»»åŠ¡ID
func generateTaskID() string {
	bytes := make([]byte, 16)
	rand.Read(bytes)
	return hex.EncodeToString(bytes)
}

// AddTask æ·»åŠ ä»»åŠ¡
func (tm *TaskManager) AddTask(task *TaskInfo) {
	tm.mutex.Lock()
	defer tm.mutex.Unlock()
	tm.tasks[task.ID] = task
}

// GetTask è·å–ä»»åŠ¡ä¿¡æ¯
func (tm *TaskManager) GetTask(taskID string) (*TaskInfo, error) {
	tm.mutex.RLock()
	defer tm.mutex.RUnlock()

	task, exists := tm.tasks[taskID]
	if !exists {
		return nil, fmt.Errorf("ä»»åŠ¡ä¸å­˜åœ¨: %s", taskID)
	}
	return task, nil
}

// UpdateTask æ›´æ–°ä»»åŠ¡çŠ¶æ€
func (tm *TaskManager) UpdateTask(taskID string, status TaskStatus, progress int, step, message, result, error string) {
	tm.mutex.Lock()
	defer tm.mutex.Unlock()

	if task, exists := tm.tasks[taskID]; exists {
		task.Status = status
		task.Progress = progress
		task.Step = step
		task.Message = message
		if result != "" {
			task.Result = result
		}
		if error != "" {
			task.Error = error
		}
		if status == TaskStatusCompleted || status == TaskStatusFailed {
			task.EndTime = time.Now()
		}
	}
}

// RemoveTask ç§»é™¤ä»»åŠ¡
func (tm *TaskManager) RemoveTask(taskID string) {
	tm.mutex.Lock()
	defer tm.mutex.Unlock()
	delete(tm.tasks, taskID)
}

