		time.Sleep(500 * time.Millisecond)
		a.setupSystemTray()
	}()
}

// initializeServiceContainer åˆå§‹åŒ–æœåŠ¡å®¹å™¨
func (a *App) initializeServiceContainer() error {
	// 1. è·å–é…ç½®ç›®å½• ~/.to_icalendar
	homeDir, err := os.UserHomeDir()
	if err != nil {
		return fmt.Errorf("è·å–ç”¨æˆ·ç›®å½•å¤±è´¥: %w", err)
	}
	configDir := filepath.Join(homeDir, ".to_icalendar")

	// 2. åˆå§‹åŒ–æ—¥å¿—ç³»ç»Ÿ
	loggerInstance := logger.NewDefaultLogger()
	a.loggerInstance = loggerInstance

	// 3. åŠ è½½é…ç½®æ–‡ä»¶
	serverConfigPath := filepath.Join(configDir, "server.yaml")
	serverConfig, err := services.LoadConfig(serverConfigPath)
	if err != nil {
		return fmt.Errorf("åŠ è½½é…ç½®æ–‡ä»¶å¤±è´¥: %w", err)
	}

	// 4. åˆ›å»ºæ‰˜ç›˜ç¨‹åºçš„æœåŠ¡å®¹å™¨ï¼ˆç”¨äºå‘åå…¼å®¹ï¼‰
	serviceContainer := services.NewServiceContainer(configDir, serverConfig, loggerInstance)
	a.serviceContainer = serviceContainer
	a.config = serverConfig

	return nil
}

