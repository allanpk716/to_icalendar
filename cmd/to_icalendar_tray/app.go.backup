// calculateProgress æ ¹æ®æ­¥éª¤åç§°è®¡ç®—è¿›åº¦ç™¾åˆ†æ¯”
func calculateProgress(step string) int {
	stepProgressMap := map[string]int{
		"è§£ç å›¾ç‰‡":           20,
		"ä¸Šä¼ AIæœåŠ¡":         40,
		"AIæœåŠ¡è°ƒç”¨æˆåŠŸ":      60,
		"AIåˆ†æå®Œæˆ":        80,
		"åˆ›å»ºMicrosoft Todoä»»åŠ¡": 90,
		"ä»»åŠ¡åˆ›å»ºæˆåŠŸ":        100,
	}

	if progress, ok := stepProgressMap[step]; ok {
